{
  "name": "@mf-hub/admin-api",
  "version": "1.0.0",
  "type": "module",
  "description": "Admin API service for managing micro-frontend configurations",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "tsx src/database/run-migrations.ts",
    "seed": "tsx src/database/run-seeds.ts",
    "db:setup": "pnpm migrate && pnpm seed",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/express-serve-static-core": "^5.1.1",
    "@types/node": "^25.0.10",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
