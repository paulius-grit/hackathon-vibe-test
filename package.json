{
  "name": "microfrontend-hub",
  "version": "1.0.0",
  "private": true,
  "description": "A hub application for micro frontends using Module Federation",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "clean": "pnpm -r run clean && rimraf node_modules",
    "demo:preview": "pnpm --filter @mf-hub/demo-app preview",
    "container:preview": "pnpm --filter @mf-hub/container preview",
    "calendar:preview": "pnpm --filter @mf-hub/calendar-app preview",
    "admin:preview": "pnpm --filter @mf-hub/admin-app preview",
    "webpack:preview": "pnpm --filter @mf-hub/webpack-demo-app preview",
    "dev:api": "pnpm --filter @mf-hub/admin-api dev",
    "build:api": "pnpm --filter @mf-hub/admin-api build",
    "db:migrate": "pnpm --filter @mf-hub/admin-api migrate",
    "db:seed": "pnpm --filter @mf-hub/admin-api seed",
    "db:setup": "pnpm --filter @mf-hub/admin-api db:setup"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "rimraf": "^6.1.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.28.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@esbuild/*",
      "@rspack/*"
    ]
  }
}
